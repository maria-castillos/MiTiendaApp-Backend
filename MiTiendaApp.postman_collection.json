								"exec": [
									"// Append-safe: only adds tests; does not remove existing ones",
									"",
									"// 1) Parse JSON safely",
									"let body = pm.response.text();",
									"let data = null;",
									"try {",
									"    data = pm.response.json();",
									"} catch (e) {",
									"    // If not valid JSON, keep data as null and surface an assertion failure",
									"    pm.test(\"Response body is valid JSON\", function () {",
									"        pm.expect.fail(\"Response is not valid JSON: \" + e.message);",
									"    });",
									"}",
									"",
									"// 2) Verify status 200",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"// 3) Assert that token exists and is a non-empty string",
									"pm.test(\"Response has a non-empty token string\", function () {",
									"    pm.expect(data, \"Parsed JSON should exist\").to.be.an(\"object\");",
									"    pm.expect(data).to.have.property(\"token\");",
									"    pm.expect(data.token, \"token should be a non-empty string\").to.be.a(\"string\").and.to.have.length.above(0);",
									"});",
									"",
									"// 4) Set the collection variable when present",
									"if (data && typeof data.token === \"string\" && data.token.length > 0) {",
									"    pm.collectionVariables.set(\"auth_token\", data.token);",
									"    // 5) Log a helpful message",
									"    console.log(\"auth_token set in collection variables.\");",
									"} else {",
									"    console.warn(\"auth_token not set: token missing or invalid in response.\");",
									"}"
